<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="186dp"
    android:layout_height="260dp"
    android:orientation="vertical"
    android:background="@drawable/shape_menu"
    android:layout_margin="6dp"
    >
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/iv_menushopimg"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:scaleType="fitXY"
        />
    <LinearLayout
        android:id="@+id/ll_one"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/iv_menushopimg"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="30dp">
        <TextView
            android:id="@+id/tv_menushoptype"
            android:textColor="@color/tv_Black"
            android:text="123"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_menushopname"
            android:text="jhhhw"
            android:textColor="@color/tv_Black"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/ll_one"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="30dp">
        <TextView
            android:id="@+id/tv_menushopprice"
            android:textColor="@color/red"
            android:text="123"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_menushopoldprice"
            android:text="jhhhw"
            android:textColor="@color/tv_Black"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</RelativeLayout>