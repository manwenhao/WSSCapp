<?xml version="1.0" encoding="utf-8"?>
<com.example.chen.wsscapp.Util.CustomToolBar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:lybeat="http://schemas.android.com/tools"
    android:orientation="vertical"
    app:left_tv_visible="false"
    app:right_btn_visible="false"
    app:right_tv_visible="false"
    app:title_visible="true"
    app:title_text="你的推广"
    android:fitsSystemWindows="true"
    >
<LinearLayout
    android:orientation="vertical"
    android:background="@color/bg_Gray_light"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="16sp"
            android:text="推广他人时，别忘了给与他人你的推广码哦"
            android:textColor="@color/orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

           <RelativeLayout
               android:layout_weight="1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_centerHorizontal="true"
                   android:id="@+id/tv_app"
                   android:textSize="20sp"
                   android:textColor="@color/gray"
                   android:text="下载app"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <LinearLayout
                   android:layout_centerHorizontal="true"
                   android:layout_below="@id/tv_app"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:padding="5dp"
                   android:background="@color/white"
                   >
               <ImageView
                   android:layout_width="120dp"
                   android:layout_height="120dp"
                   android:src="@drawable/app"
                   />
               </LinearLayout>
           </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:padding="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_tgma"
                    android:layout_centerHorizontal="true"
                    android:textSize="20sp"
                    android:text="您的推广码"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:id="@+id/tv_tuiguangcode"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40dp"
                    android:layout_below="@id/tv_tgma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>
    </com.example.chen.wsscapp.Util.CustomToolBar>