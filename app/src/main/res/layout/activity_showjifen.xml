<?xml version="1.0" encoding="utf-8"?>
<com.example.chen.wsscapp.Util.CustomToolBar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:lybeat="http://schemas.android.com/tools"
    android:orientation="vertical"
    app:left_tv_visible="false"
    app:right_btn_visible="true"
    app:right_tv_visible="true"
    app:right_tv_text="积分说明"
    app:title_visible="true"
    app:title_text="我的积分"
    android:fitsSystemWindows="true"
    >

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/jifenbackgroud"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <LinearLayout
            android:orientation="horizontal"
            android:padding="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/jifenbg"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:backgroundTint="@color/whitejifen"
                >
                <TextView
                    android:gravity="center"
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="白积分"
                    android:textSize="20sp"
                   />
                <TextView
                    android:id="@+id/tv_whiteshowjifen"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text="未知"
                    />
            </LinearLayout>
            <View
                android:layout_width="40dp"
                android:layout_height="140dp"/>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/jifenbg"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:backgroundTint="@color/redjifen"
                >
                <TextView
                    android:gravity="center"
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="红积分"
                    android:textSize="20sp"
                    />
                <TextView
                    android:id="@+id/tv_redshowjifen"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text="未知"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:textSize="24sp"
            android:textColor="@color/red"
            android:text="可提现"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/tv_tixian"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:text="0"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_zhifbaccount"
                android:gravity="top"
                android:hint="请输入提现支付宝账号"
                android:layout_gravity="center"
                android:textColorHint="#cb8000"
                android:textColor="@color/black"
                android:background="@drawable/shap_et"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@null"
                />
            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/bt_tixian"
                android:layout_gravity="center"
                android:text="提 现"
                android:textSize="20sp"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shap_bt"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="30dp"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_seetxist"
                android:textColor="@color/text_blue"
                android:text="查看提现记录>>"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                />
        </LinearLayout>



    </LinearLayout>
</com.example.chen.wsscapp.Util.CustomToolBar>