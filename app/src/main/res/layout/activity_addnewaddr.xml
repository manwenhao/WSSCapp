<?xml version="1.0" encoding="utf-8"?>
<com.example.chen.wsscapp.Util.CustomToolBar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:left_tv_visible="false"
    app:right_btn_visible="true"
    app:right_tv_visible="true"
    app:title_visible="true"
    app:right_tv_text="确定"
    app:title_text="添加新收货地址"
    android:fitsSystemWindows="true"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="20dp"
        >
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="0"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="    收件人"
                android:layout_width="80dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_newuser"
                android:singleLine="true"
                android:textColor="@color/black"
                android:backgroundTint="@null"
                android:background="@drawable/shape_shop"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="0"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="联系电话"
                android:layout_width="80dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_newphone"
                android:singleLine="true"
                android:textColor="@color/black"
                android:backgroundTint="@null"
                android:background="@drawable/shape_shop"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="0"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="收货地址"
                android:layout_width="80dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_newaddr"
                android:textColor="@color/black"
                android:gravity="top"
                android:backgroundTint="@null"
                android:background="@drawable/shape_shop"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="200dp" />
        </LinearLayout>

    </LinearLayout>
</com.example.chen.wsscapp.Util.CustomToolBar>