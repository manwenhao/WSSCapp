<?xml version="1.0" encoding="utf-8"?>
<com.example.chen.wsscapp.Util.CustomToolBar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:left_tv_visible="false"
    app:right_btn_visible="false"
    app:right_tv_visible="false"
    app:title_visible="true"
    app:title_text="首页宣传"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:layout_gravity="left|center"
            android:textColor="@color/red"
            android:text="首页宣传图片上传"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
        <Button
            android:id="@+id/bt_photo"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="上传宣传图片"
            />
    </LinearLayout>
    <View
        android:background="@color/bg_Gray"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <GridView
        android:id="@+id/gv_photo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:numColumns="4"
        >
    </GridView>
    <View
        android:background="@color/bg_Gray"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <Button
            android:background="@color/organ"
            android:text="确认上传"
            android:textSize="22sp"
            android:id="@+id/bt_uploadinfo"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
    </com.example.chen.wsscapp.Util.CustomToolBar>